<Window x:Class="StatisticsAnalysisTool.Views.DamageMeterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Translation.Title, FallbackValue=TITLE}" 
        Height="450" Width="650" MinHeight="250" MinWidth="400" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        BorderThickness="1,1,1,1"
        BorderBrush="{StaticResource SolidColorBrush.Background.3}"
        AllowsTransparency="True"
        Topmost="True"
        Loaded="DamageMeterWindow_OnLoaded"
        Closing="DamageMeterWindow_OnClosing">
    <Grid Background="{StaticResource SolidColorBrush.Background.1}">
        <Grid ZIndex="1" Height="33" VerticalAlignment="Top" Background="{StaticResource SolidColorBrush.Background.2}" MouseDown="Hotbar_MouseDown" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="{Binding Translation.Title, FallbackValue=TITLE}" VerticalAlignment="Top" Height="33" FontSize="16" 
                   Foreground="{StaticResource SolidColorBrush.Text.1}" FontWeight="Bold" />
            <Separator Grid.Column="0" Margin="5,30,5,0" VerticalAlignment="Top" />

            <CheckBox Grid.Column="1" x:Name="ClickThroughToggle" Content="点击穿透" Margin="10,0,10,0" VerticalAlignment="Center" Foreground="{StaticResource SolidColorBrush.Text.1}" Click="ClickThroughToggle_Click"/>
            <TextBox Grid.Column="2" x:Name="OpacityInput" Width="60" Height="22" Margin="0,5,10,0" VerticalAlignment="Top" HorizontalAlignment="Left" TextAlignment="Center" Foreground="{StaticResource SolidColorBrush.Text.1}" Background="{StaticResource SolidColorBrush.Background.1}" BorderBrush="{StaticResource SolidColorBrush.Background.3}" KeyDown="OpacityInput_OnKeyDown" LostFocus="OpacityInput_OnLostFocus"/>

            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Button Style="{StaticResource WindowButtonStyle}" Content="0" Margin="0,0,8,0" Click="MinimizeButton_Click" />
                <Button x:Name="MaximizedButton" Style="{StaticResource WindowButtonStyle}" Content="1" Margin="0,0,8,0" Click="MaximizedButton_Click" />
                <Button Style="{StaticResource WindowButtonStyle}" Content="r" Click="CloseButton_Click" />
            </StackPanel>
        </Grid>

        <Grid x:Name="ContentGrid" Margin="0,33,-1,0">
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding DamageMeter, IsAsync=True, Mode=OneWay}" ItemTemplate="{StaticResource DamageMeterFragmentTemplate}" />
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
